
<% if @user.errors.any? %>
<div id="error_explanation">
<h2><%= pluralize(@user.errors.count, "error") %> prohibited this form from being saved.</h2>
	<ul>
		<% @user.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
</div>
<% end %>

<%= form_for @user do |f| %>
<%= label(:user, :email, "Email:") %>
<%= f.email_field :email %>
<br><br>
<%= label(:user, :username, "Username:") %>
<%= f.text_field :username %>
<br><br>
<%= label(:user, :password, "Password:") %>
<%= f.password_field :password %>
<br><br>
<%= f.submit "Submit" %>
<% end %>


<% if false %>

<%= render "form" %>

<%= form_tag("/users", method: "post") do %>
<%= label_tag(:email, "Email:") %>
<%= text_field_tag :email %>
<br><br>
<%= label_tag(:username, "Username:") %>
<%= text_field_tag :username %>
<br><br>
<%= label_tag(:password, "Password:") %>
<%= password_field_tag :password %>
<br><br>
<%= submit_tag "Submit" %>
<% end %>
<% if false %>

<form action="/users" method="post" accept-charset="UTF-8">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
<label for="email">Email</label>
<input type="text" name="user[email]" id="email"><br><br>
<label for="username">Username</label>
<input type="text" name="user[username]" id="username"><br><br>
<label for="password">Password</label>
<input type="password" name="user[password]" id="password"><br><br>
<input type="submit" value="Submit">
</form>

<% end %>